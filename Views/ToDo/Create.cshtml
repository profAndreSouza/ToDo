@model ToDoApi.Models.ToDoItem

<h2>Nova Tarefa</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Título</label>
        <input asp-for="Title" name="Title" class="form-control" required />
    </div>
    <div>
        <label>Descrição</label>
        <input asp-for="Description" name="Description" class="form-control" required />
    </div>
    <div>
        <input type="submit" value="Salvar" class="btn btn-success mt-3" />
    </div>
</form>
