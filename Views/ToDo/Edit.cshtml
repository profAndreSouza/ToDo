@model ToDoApi.Models.ToDoItem

<h2>Editar Tarefa</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" value="@Model.Id" />
    <div>
        <label>Título</label>
        <input asp-for="Title" name="Title" value="@Model.Title" class="form-control" required />
    </div>
    <div>
        <label>Descrição</label>
        <input asp-for="Description" name="Description" value="@Model.Description" class="form-control" required />
    </div>
    <div>
        <label>Status</label>
        <input type="checkbox" name="IsCompleted" @(Model.IsCompleted ? "checked" : "") value="true" asp-for="IsCompleted" />
    </div>
    <div>
        <input type="submit" value="Salvar" class="btn btn-primary mt-3" />
    </div>
</form>
