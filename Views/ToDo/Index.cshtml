@model IEnumerable<ToDoApi.Models.ToDoItem>

<h2>Lista de Tarefas</h2>
<a class="btn btn-primary" href="@Url.Action("Create")">Nova Tarefa</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>ID</th>
            <th>Título</th>
            <th>Descrição</th>
            <th>Concluído</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@(item.IsCompleted ? "Sim" : "Não")</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.Id })">Editar</a> | 
                    <a href="@Url.Action("Delete", new { id = item.Id })">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
